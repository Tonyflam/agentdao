# AgentDAO Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# BLOCKCHAIN CONFIGURATION (Thirdweb)
# ===========================================
THIRDWEB_CLIENT_ID=your_thirdweb_client_id
THIRDWEB_SECRET_KEY=your_thirdweb_secret_key

# Network Configuration
CHAIN_ID=11155111
NETWORK_NAME=sepolia
RPC_URL=https://sepolia.infura.io/v3/your_infura_key

# Contract Addresses (deployed contracts)
AGENT_REGISTRY_CONTRACT=0x0000000000000000000000000000000000000000
REPUTATION_CONTRACT=0x0000000000000000000000000000000000000000
ESCROW_CONTRACT=0x0000000000000000000000000000000000000000
GOVERNANCE_CONTRACT=0x0000000000000000000000000000000000000000

# ===========================================
# AI PROVIDER CONFIGURATION
# ===========================================
# OpenAI (for agent reasoning)
OPENAI_API_KEY=your_openai_api_key

# Anthropic (alternative provider)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Default AI Provider (openai | anthropic | workers-ai)
DEFAULT_AI_PROVIDER=openai

# ===========================================
# MCP SERVER CONFIGURATION
# ===========================================
MCP_SERVER_PORT=3001
MCP_WEBSOCKET_PORT=3002
MCP_SERVER_HOST=localhost

# ===========================================
# AGENT ECONOMY SETTINGS
# ===========================================
# Minimum stake required to register as an agent (in wei)
MIN_AGENT_STAKE=1000000000000000

# Default task timeout (in seconds)
DEFAULT_TASK_TIMEOUT=3600

# Maximum concurrent collaborations per agent
MAX_CONCURRENT_TASKS=10

# Reputation decay rate (0-100, percentage per epoch)
REPUTATION_DECAY_RATE=5

# ===========================================
# SECURITY
# ===========================================
# JWT Secret for API authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090
